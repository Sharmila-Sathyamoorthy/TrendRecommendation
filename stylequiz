// style_quiz.dart
import 'package:flutter/material.dart';
import 'recommendations.dart';

class StyleQuiz extends StatefulWidget {
  @override
  _StyleQuizState createState() => _StyleQuizState();
}

class _StyleQuizState extends State<StyleQuiz> {
  final _formKey = GlobalKey<FormState>();
  String _stylePreference = '';

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('Style Quiz')),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Form(
          key: _formKey,
          child: Column(
            children: [
              TextFormField(
                decoration: InputDecoration(labelText: 'Favorite Style'),
                onSaved: (value) {
                  _stylePreference = value!;
                },
              ),
              SizedBox(height: 20),
              ElevatedButton(
                onPressed: () {
                  if (_formKey.currentState!.validate()) {
                    _formKey.currentState!.save();
                    Navigator.push(
                      context,
                      MaterialPageRoute(
                          builder: (context) =>
                              Recommendations(_stylePreference)),
                    );
                  }
                },
                child: Text('Get Recommendations'),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
